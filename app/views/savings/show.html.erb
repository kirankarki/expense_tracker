<%= render 'shared/title', title: "Detail of #{@saving.title}" %>

<table class='table table-condensed table-hover table-responsive'>
  <tbody>
    <tr>
      <th>Title</th>
      <td><%= @saving.title %></td>
    </tr>

    <tr>
      <th>Description </th>
      <td><%= @saving.description %></td>
    </tr>

    <tr>
      <th>Amount </th>
      <td><%= number_with_delimiter(@saving.amount) %></td>
    </tr>

    <tr>
      <th>Saved date </th>
      <td><%= @saving.saved_date %></td>
    </tr>

    <tr>
      <th>Frequency</th>
      <td><%= @saving.frequency.name %></td>
    </tr>

    <tr>
      <td colspan='2' class='centered'>
        <%= link_to 'Edit', edit_saving_path(@saving), class: 'btn btn-warning' %>
        <%= link_to 'Destroy', saving_path(@saving), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <%= link_to 'Back', :back, class: 'btn btn-info' %>
      </td>
    </tr>
  </tbody>
</table>
