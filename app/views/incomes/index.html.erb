<%= render 'shared/title', title: 'Incomes' %>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Amount</th>
      <th>Received date</th>
      <th>Frequency</th>
      <th colspan="3">
        <div style='text-align: right;'>
          <%= link_to 'Add new income', new_income_path, target: 'blank', class: 'btn btn-primary' %>
        </div>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%= income.title %></td>
        <td><%= number_with_delimiter(income.amount) %></td>
        <td><%= income.received_date %></td>
        <td><%= income.frequency.name %></td>
        <td>
          <%= link_to 'Show', income, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_income_path(income), class: 'btn btn-success' %>
          <%= link_to 'Destroy', income, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class='centered'>
  <%= will_paginate(@incomes, :renderer => WillPaginate::ActionView::LinkRenderer, class: 'pagination-lg') %>
</div>
