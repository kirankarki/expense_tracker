<%= render 'shared/title', title: "Detail of #{@income.title}" %>

<table class='table table-condensed table-hover table-responsive'>
  <tbody>
    <tr>
      <th>Title</th>
      <td><%= @income.title %></td>
    </tr>

    <tr>
      <th>Description </th>
      <td><%= @income.description %></td>
    </tr>

    <tr>
      <th>Amount </th>
      <td><%= number_with_delimiter(@income.amount) %></td>
    </tr>

    <tr>
      <th>Received date </th>
      <td><%= @income.received_date %></td>
    </tr>

    <tr>
      <th>Frequency</th>
      <td><%= @income.frequency.name %></td>
    </tr>

    <tr>
      <td colspan='2' class='centered'>
        <%= link_to 'Edit', edit_income_path(@income), class: 'btn btn-warning' %>
        <%= link_to 'Destroy', income_path(@income), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <%= link_to 'Back', :back, class: 'btn btn-info' %>
      </td>
    </tr>
  </tbody>
</table>