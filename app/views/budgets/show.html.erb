<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @budget.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @budget.description %>
</p>

<p>
  <strong>Original amount:</strong>
  <%= @budget.original_amount %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @budget.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @budget.end_date %>
</p>

<p>
  <strong>Remaining amount:</strong>
  <%= @budget.remaining_amount %>
</p>

<p>
  <strong>Extra used amount:</strong>
  <%= @budget.extra_used_amount %>
</p>

<%= line_chart @budget.expenses.group_by_day_of_month(:created_at).count %>
<%= column_chart @budget.expenses.group_by_day_of_week(:created_at, format: "%a").count %>

<%= link_to 'Edit', edit_budget_path(@budget) %> |
