<%= form_for [budget, expense] do |f| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited expense from being saved:</h2>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <% if expense.errors[:title].present? %>
      <p class = "field_with_errors" >
        <%= expense.errors[:title].join('. ') %>
      </p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, class: "form-control", min: 0 %>
    <% if expense.errors[:amount].present? %>
      <p class = "field_with_errors" >
        <%= expense.errors[:amount].join('. ') %>
      </p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :spent_date %>
    <%= f.text_field :spent_date, class: "form-control", readonly: true, data: { provide: "datepicker", date_format: "dd M yyyy" } %>
    <% if expense.errors[:spent_date].present? %>
      <p class = "field_with_errors" >
        <%= expense.errors[:spent_date].join('. ') %>
      </p>
    <% end %>
  </div>

  <div class="centered">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
